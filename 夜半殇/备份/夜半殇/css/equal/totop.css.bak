@charset "utf-8";
#totop{
	position:fixed;
	bottom:100px;
	right:50px;
	width:50px;
	height:50px;
	opacity:0;
	border-radius:5px;
	transition:.5s;
	background:url('../../images/smallpic/totop.png') no-repeat 6px  11px/37px;
	background-color:#969696;
	z-index:0;
}
#totop.block{
	right:70px;
	opacity:1;
	z-index:99;
}
#totop:hover{
	border-radius:30px;
	background-color:#3c3c3c;
}
